<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddActivity">

    <TextView
            android:text="リストに追加するページ"
            android:layout_width="339dp"
            android:layout_height="39dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:id="@+id/textView" android:textSize="24sp"/>
    <Button
            android:text="戻る"
            android:layout_width="100dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="15dp" android:id="@+id/BackButton"
            android:layout_marginBottom="45dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"/>
    <TextView
            android:text="追加内容"
            android:layout_width="121dp"
            android:layout_height="34dp"
            android:id="@+id/textView2" android:textSize="24sp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text="備考"
            android:layout_width="121dp"
            android:layout_height="34dp"
            android:id="@+id/textView4" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/Add_task"/>
    <EditText
            android:layout_width="205dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Add_task"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="35dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="24sp"
    />
    <EditText
            android:layout_width="205dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/other"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="35dp"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <Button
            android:text="追加"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/AddButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:textSize="18sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/other"
    />
</android.support.constraint.ConstraintLayout>