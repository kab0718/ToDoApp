<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <Button
            android:text="リストに追加"
            android:layout_width="271dp"
            android:layout_height="101dp"
            android:id="@+id/add" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="110dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/confirmation"/>
    <Button
            android:text="リストを確認"
            android:layout_width="271dp"
            android:layout_height="101dp"
            android:id="@+id/confirmation" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/add" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp"/>
</android.support.constraint.ConstraintLayout>